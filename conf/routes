# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Standard pages
GET           /                                    controllers.Login.index()
GET           /login                               controllers.Login.login()
POST          /login                               controllers.Login.authenticate()
GET           /logout                              controllers.Login.logout()

GET           /gamegroups                          controllers.GameGroupPortal.gameGroups()
POST          /insertGameGroup                     controllers.GameGroupPortal.insertGameGroup()
GET           /selectGameGroup/:id                 controllers.GameGroupPortal.selectGameGroup(id: Long)

GET           /overview                            controllers.Application.overview()
POST          /insert                              controllers.Application.insert()
GET           /players                             controllers.Application.players()
POST          /insertPlayer                        controllers.Application.insertPlayer()
POST          /remove-game/:id                     controllers.Application.removeGame(id: Long)
POST          /remove-player/:id                   controllers.Application.removePlayer(id: Long)
GET           /charts                              controllers.Application.charts()

GET           /app                                 controllers.App.start()

# JSON API access points

GET           /rest/gamegroup                      controllers.RestfulAPI.gameGroups()
POST          /rest/gamegroup                      controllers.RestfulAPI.createGameGroup()
GET           /rest/gamegroup/:id                  controllers.RestfulAPI.gameGroup(id: Long)
POST          /rest/gamegroup/:id                  controllers.RestfulAPI.updateGameGroup(id: Long)
DELETE        /rest/gamegroup/:id                  controllers.RestfulAPI.deleteGameGroup(id: Long)

GET           /rest/player                         controllers.RestfulAPI.players()
POST          /rest/player                         controllers.RestfulAPI.createPlayer()
GET           /rest/player/:id                     controllers.RestfulAPI.player(id: Long)
POST          /rest/player/:id                     controllers.RestfulAPI.updatePlayer(id: Long)
DELETE        /rest/player/:id                     controllers.RestfulAPI.deletePlayer(id: Long)

GET           /rest/gamegroup/:gid/game            controllers.RestfulAPI.games(gid: Long)
POST          /rest/gamegroup/:gid/game            controllers.RestfulAPI.createGame(gid: Long)
GET           /rest/gamegroup/:gid/game/:id        controllers.RestfulAPI.game(gid: Long, id: Long)
PUT           /rest/gamegroup/:gid/game/:id        controllers.RestfulAPI.updateGame(gid: Long, id: Long)
DELETE        /rest/gamegroup/:gid/game/:id        controllers.RestfulAPI.deleteGame(gid: Long, id: Long)

GET           /rest/games/:id                      controllers.RestfulAPI.games(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                        controllers.Assets.at(path="/public", file)
GET           /apple-touch-icon.png                controllers.Assets.at(path="/public", file="images/apple-touch-icon.png")